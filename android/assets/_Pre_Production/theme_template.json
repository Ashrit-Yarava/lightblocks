{
  "name": "gameboy",
  "author": "bsc",
  "version": 1,

  // music - optional (defaults to normal music)
  "music": {
    "slow": "slowmusic.mp3",
    "fast": "fastmusic.mp3"
  },

  // sounds - optional (defaults to normal game sound, leave blank for no sound)
  "sounds": {
    "rotate": "rotate.mp3",
    "drop": "drop.mp3",
    "normalclear": "clear.mp3",
    "achievement": "achieve.mp3",
    "garbage": "garbage.mp3",
    "specialclear": "specialclear.mp3",
    "gameover": "gbgameover.ogg"
  },
  // background, all entries optional
  "screen": {
    "bgcolor": "94b13a",
    // TODO
    "bgpic": "",
    // TODO optional, defaults to bgpic
    "bgpic_landscape": "",
    "scorecolor": "ffffff",
    // TODO
    "emphasizecolor": "ffffff",
    "achievementcolor": "ffffff",
    "titlecolor": "ffffff",
    "wallcolor": "ffffff",
    "buttoncolor": "ffffff"
  },
  "blocks": {
    // Here come the normal block pics - optional
    // https://www.spriters-resource.com/game_boy_gbc/tetris/
    "normal_pics": {
      "l": "blockl",
      "i": "blocki",
      "j": "blockj",
      "z": "blockz",
      "s": "blocks",
      "o": "blocko",
      "t": "blockt",
      "garbage": "blocko",
      "grid": "blockgrid",
      "ghost": "blockghost"
    },
    // block colors rgb(a) - optional (default white)
    "tint": {
      "l": "ffffff",
      "i": "ffffff",
      "j": "ffffff",
      "z": "ffffff",
      "s": "ffffff",
      "o": "ffffff",
      "t": "ffffff",
